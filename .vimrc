syntax on
set nocompatible
set noinsertmode
" tab
set shiftwidth=4
set smarttab
set nowrap
set backspace=1
set smartindent
set shortmess=t
set showmatch
" search
set ignorecase
set smartcase
set hlsearch
set incsearch
set history=100
set magic
set iminsert=1
" display option
set number
set ruler
set showcmd
set laststatus=2
set cmdheight=2
set wildmenu
set tabstop=1
set title
set statusline=%F%m%r%h%w\ [FORMAT=%{&ff}]\ [TYPE=%Y]\ [ASCII=\%03.3b]\ [HEX=\%04B]\ [POS=%04l,%04v][%p%%]\ [LEN=%L]

